<%= page_title(t('.title')) %>

<%= form_with(model: [@actor, @movie_paper]) do |f| %>
  <div class="mb-6">
    <%= f.label :character_name, class: 'form-label' %>
    <%= f.text_field :character_name, class: 'form-field' %>
  </div>
  <div class="mb-6">
    <%= f.label :movie_id, class: 'form-label' %>
    <%= f.collection_select :movie_id, @movies, :id, :title,  class: 'form-field' %>
  </div>
  <div>
    <%= f.submit 'Criar Papel', class: 'btn-confirm' %>
  </div>
<% end %>
